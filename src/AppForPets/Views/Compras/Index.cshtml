@model IEnumerable<AppForPets.Models.Compra>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a id="SelectAnimalesForCompra" asp-action="SelectAnimalesForCompra">Create New</a>
</p>

<form asp-controller="Compras" asp-action="Index" method="get">
    <p>
        Name: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrecioTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirecionEnvio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirecionEnvio)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CompraID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CompraID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CompraID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
